<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entity.Moviehistory" table="moviehistory">
        <id name="id" type="int" column="ID" >
            <generator class="increment"/>
        </id>
        <property name="user">
            <column name="USER"/>
        </property>
        <property name="movietitle">
            <column name="MOVIETITLE"/>
        </property>
        <property name="movierating">
            <column name="MOVIERATING"/>
        </property>
        <property name="movieactors">
            <column name="MOVIEACTORS"/>
        </property>
        <property name="date">
            <column name="DATE"/>
        </property>
    </class>
</hibernate-mapping>